<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MensaApp"
             xmlns:conv="clr-namespace:MensaApp.Converter"
             x:Class="MensaApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
            <conv:DishTagColorConverter x:Key="DishTagColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
