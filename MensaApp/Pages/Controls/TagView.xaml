<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="MensaApp.Pages.Controls.TagView"
        xmlns:models="clr-namespace:MensaApp.Models"
        xmlns:mensa="clr-namespace:MensaPortable;assembly=MensaPortable"
        xmlns:conv ="clr-namespace:MensaApp.Converter"
        StrokeShape="RoundRectangle 16" 
        HeightRequest="32" 
        StrokeThickness="0" 
        Background="{Binding Name, Converter={StaticResource DishTagColorConverter}}"
        Padding="{OnPlatform '12,0,12,8',Android='12,0,12,0'}"
        Margin="2 2 2 2"
        x:DataType="mensa:DishTag">
        
        <Label Text="{Binding Name}" x:Name="TitleLabel"
            TextColor="{AppThemeBinding Light={StaticResource LightBackground},Dark={StaticResource DarkBackground}}" 
            FontSize="14" 
            VerticalOptions="Center"
            VerticalTextAlignment="Center"/>
</Border>