                            <Button Grid.Column="2" Text="&gt;" Padding="0 30 0 30" Command="{Binding NextMensaCommand}" />
                        </Grid>-->

                    <Grid Grid.Row="0" ColumnDefinitions="*,*" Margin="0 0 10 0">
                        <Label Padding="0 0 0 10" Grid.Column="0" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" Style="{StaticResource Title2}" Text="{Binding CurrentMensa}" />
                        <Button Grid.Column="2" Text="Select 🔻" Padding="0 30 0 30" Command="{Binding SelectMensaCommand}" />
                    </Grid>

