                        <CollectionView Grid.Row="1"
                            ItemsSource="{Binding CurrentDishes}"
                            Margin="-7.5,0"
                            ItemSizingStrategy="MeasureAllItems"
                            x:Name="DishCollectionView"
                            SelectionMode="Single">

                            <CollectionView.ItemsLayout>
                                <!-- Vertical scroll, items flow left-to-right then wrap to next row -->
                                <GridItemsLayout Orientation="Vertical"
                                     Span="2"
                                     HorizontalItemSpacing="7.5"
                                     VerticalItemSpacing="7.5" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="mensa:Dish">
                                    <controls:DishCardView />
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto" Margin="10 0 0 0">
                            <Button Grid.Column="0" Text="&lt;" Padding="0 30 0 30"  Command="{Binding PreviousDateCommand}" />
                            <Label Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Style="{StaticResource Title2}" Text="{Binding Date, StringFormat='{0:d}'}" />
                            <Button Grid.Column="2" Text="&gt;" Padding="0 30 0 30" Command="{Binding NextDateCommand}" />
                        </Grid>


